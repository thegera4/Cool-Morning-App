<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.coolmorning">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoolMorning">
        <activity
            android:name="com.app.coolmorning.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoolMorning.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.coolmorning.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
        <activity
            android:name="com.app.coolmorning.PdfActivity"
            android:parentActivityName="com.app.coolmorning.MainActivity">
            <meta-data
                android:name="android.support.Parent_Activity"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.app.coolmorning.ActivityContacto"
            android:parentActivityName="com.app.coolmorning.MainActivity">
            <meta-data
                android:name="android.support.Parent_Activity"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>